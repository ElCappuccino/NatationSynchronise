<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	id="WebApp_ID" version="3.1">
	<listener>
		<listener-class>com.natation.config.InitialisationDAOFactory</listener-class>
	</listener>

	<!-- Page de connexion -->
	<servlet>
		<servlet-name>connect</servlet-name>
		<servlet-class>com.natation.servlets.ConnexionServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>connect</servlet-name>
		<url-pattern>/connect</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>connect</servlet-name>
		<url-pattern></url-pattern>
	</servlet-mapping>
	<!-- Page d'accueil -->
	<servlet>
		<servlet-name>accueil</servlet-name>
		<servlet-class>com.natation.servlets.AccueilServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>accueil</servlet-name>
		<url-pattern>/accueil</url-pattern>
	</servlet-mapping>
	<!-- Page des compétitions -->
	<servlet>
		<servlet-name>competition</servlet-name>
		<servlet-class>com.natation.servlets.CompetitionServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>competition</servlet-name>
		<url-pattern>/competition</url-pattern>
	</servlet-mapping>
	<!-- Page d'admin -->
	<servlet>
		<servlet-name>admin</servlet-name>
		<servlet-class>com.natation.servlets.AdminServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>admin</servlet-name>
		<url-pattern>/admin</url-pattern>
	</servlet-mapping>
	<!-- Page de déconnexion -->
	<servlet>
		<servlet-name>logout</servlet-name>
		<servlet-class>com.natation.servlets.DeconnexionServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>logout</servlet-name>
		<url-pattern>/logout</url-pattern>
	</servlet-mapping>
	
	
	<!-- Repertoire à utiliser lors d'upload de fichiers via formulaires ou autres 
	(doit etre existant, pas créé en auto) -->
	<context-param> 
		<description>repertoire uploads</description> 
      	<param-name>file-upload</param-name> 
      	<param-value>
         	d:\zz_uploadsNatSync
      	</param-value> 
   </context-param>
</web-app>